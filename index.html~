    <script>
      var post= document.getElementById( 'postRight' ),
      comment = document.getElementById( 'commentLeft' ),
      commentButton = document.getElementById('postComment');

      commentButton.onclick = function() {
      classie.toggle( this, 'active' );
      classie.toggle( post, 'pushleft' );
      classie.toggle( comment, 'pushright' );
